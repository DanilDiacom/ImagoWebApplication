@{
    ViewData["Title"] = "Diacom-SOLO-FREQ-PC";
}

@{
    var images = ViewBag.Images as List<Dictionary<string, string>>;
    var filteredImages = images?.Where(img => img["EntryKey"].Contains("SOLO-FREQ-PC")).ToList() ?? new List<Dictionary<string, string>>();
}

<link rel="stylesheet" href="~/css/freqpc.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="row d-flex justify-content-start" style="margin-top: 20px; margin-bottom:20px;">
        <!-- Image Carousel -->
        <div class="col-md-6 carousel-container">
            @if (filteredImages.Count > 0)
            {
                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < filteredImages.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="data:image/png;base64,@filteredImages[i]["Base64"]" class="d-block w-100">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            }
            else
            {
                <p style="text-align:center;">Omlouvám se, došlo k chybě při načítání obrázků.</p>
            }
        </div>

        <!-- Product Details -->
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h1 class="text-center" style="margin-bottom: 10px; margin-top: -15px;" data-key="DiacomSoloFreqPC_Title">@ViewBag.Entries["DiacomSoloFreqPC_Title"]</h1>
                <ul class="list-group">
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_PowerSource_Label" data-value="DiacomSoloFreqPC_PowerSource_Value">
                        <strong data-key="DiacomSoloFreqPC_PowerSource_Label">@ViewBag.Entries["DiacomSoloFreqPC_PowerSource_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_PowerSource_Value">@ViewBag.Entries["DiacomSoloFreqPC_PowerSource_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_Voltage_Label" data-value="DiacomSoloFreqPC_Voltage_Value">
                        <strong data-key="DiacomSoloFreqPC_Voltage_Label">@ViewBag.Entries["DiacomSoloFreqPC_Voltage_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_Voltage_Value">@ViewBag.Entries["DiacomSoloFreqPC_Voltage_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_PowerConsumption_Label" data-value="DiacomSoloFreqPC_PowerConsumption_Value">
                        <strong data-key="DiacomSoloFreqPC_PowerConsumption_Label">@ViewBag.Entries["DiacomSoloFreqPC_PowerConsumption_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_PowerConsumption_Value">@ViewBag.Entries["DiacomSoloFreqPC_PowerConsumption_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_FrequencyRange_Label" data-value="DiacomSoloFreqPC_FrequencyRange_Value">
                        <strong data-key="DiacomSoloFreqPC_FrequencyRange_Label">@ViewBag.Entries["DiacomSoloFreqPC_FrequencyRange_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_FrequencyRange_Value">@ViewBag.Entries["DiacomSoloFreqPC_FrequencyRange_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_PairingSpeed_Label" data-value="DiacomSoloFreqPC_PairingSpeed_Value">
                        <strong data-key="DiacomSoloFreqPC_PairingSpeed_Label">@ViewBag.Entries["DiacomSoloFreqPC_PairingSpeed_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_PairingSpeed_Value">@ViewBag.Entries["DiacomSoloFreqPC_PairingSpeed_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_Update_Label" data-value="DiacomSoloFreqPC_Update_Value">
                        <strong data-key="DiacomSoloFreqPC_Update_Label">@ViewBag.Entries["DiacomSoloFreqPC_Update_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_Update_Value">@ViewBag.Entries["DiacomSoloFreqPC_Update_Value"]</span>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_UpdateProcedure_Label" data-value="DiacomSoloFreqPC_UpdateProcedure_Value">
                        <strong data-key="DiacomSoloFreqPC_UpdateProcedure_Label">@ViewBag.Entries["DiacomSoloFreqPC_UpdateProcedure_Label"]</strong>
                        <ul>
                            <li><span data-value="DiacomSoloFreqPC_UpdateProcedure_Value">@ViewBag.Entries["DiacomSoloFreqPC_UpdateProcedure_Value"]</span></li>
                        </ul>
                    </li>
                    <li class="list-group-item" data-key="DiacomSoloFreqPC_Warranty_Label" data-value="DiacomSoloFreqPC_Warranty_Value">
                        <strong data-key="DiacomSoloFreqPC_Warranty_Label">@ViewBag.Entries["DiacomSoloFreqPC_Warranty_Label"]</strong>
                        <span data-value="DiacomSoloFreqPC_Warranty_Value">@ViewBag.Entries["DiacomSoloFreqPC_Warranty_Value"]</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Product Description -->
    <div class="home-body-container">
        <div class="container">
            @if (ViewBag.Entries.ContainsKey("FreqPcPopisHeader"))
            {
                <h2 data-key="FreqPcPopisHeader" style="margin-top: 20px; text-align:center">
                    @ViewBag.Entries["FreqPcPopisHeader"]
                </h2>
            }

            @if (ViewBag.Entries.ContainsKey("FreqPcPopisText"))
            {
                <div class="text-container" data-key="FreqPcPopisText">
                    <p>
                        @ViewBag.Entries["FreqPcPopisText"]
                    </p>
                </div>
            }

            @if (ViewBag.Entries.ContainsKey("FreqPcPopisTextFirst"))
            {
                <div class="text-container" data-key="FreqPcPopisTextFirst">
                    <p>
                        @ViewBag.Entries["FreqPcPopisTextFirst"]
                    </p>
                </div>
            }

            @if (ViewBag.Entries.ContainsKey("FreqPcPopisTextSecond"))
            {
                <div class="text-container" data-key="FreqPcPopisTextSecond">
                    <p>
                        @ViewBag.Entries["FreqPcPopisTextSecond"]
                    </p>
                </div>
            }
        </div>
    </div>
</div>