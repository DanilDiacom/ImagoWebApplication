@{
    ViewData["Title"] = "CENY PŘÍSTROJŮ DIACOM";
}

<section id="content">
    <div class="inner-content">
        <div class="container">

            <h1 class="page-title" style="margin-top:20px; text-align:center; margin-bottom:20px;"
                data-key="Diacom_Devices_Title">
                @ViewBag.Entries["Diacom_Devices_Title"]
            </h1>

            <div class="table-container">
                <table class="table table-bordered" style="width: 100%; max-width: 1110px; margin: 0 auto;">
                    <thead>
                        <tr>
                            <th data-key="Diacom_Table_Header_First">@ViewBag.Entries["Diacom_Table_Header_First"]</th>
                            <th data-key="Diacom_Table_Header_Second">@ViewBag.Entries["Diacom_Table_Header_Second"]</th>
                            <th data-key="Diacom_Table_Header_Third">@ViewBag.Entries["Diacom_Table_Header_Third"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img class="zoom-img" src="~/img/Enerscan_1.jpg" alt="DIACOM ENERSCAN"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="Enerscan"
                                   data-key="Device_First_Name">
                                    @ViewBag.Entries["Device_First_Name"]
                                </a>
                            </td>
                            <td data-key="Device_First_Price">@ViewBag.Entries["Device_First_Price"]</td>
                        </tr>
                        <tr>
                            <td><img class="zoom-img" src="~/img/Freq_1.jpg" alt="DIACOM FREQ LITE"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="LiteFreq" 
                                   data-key="Device_Second_Name">
                                    @ViewBag.Entries["Device_Second_Name"]
                                </a>
                            </td>
                            <td data-key="Device_Second_Price">@ViewBag.Entries["Device_Second_Price"]</td>
                        </tr>
                        <tr>
                            <td><img class="zoom-img" src="~/img/Plasma_2.jpg" alt="PLASMOTRONIC"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="Plasmotronic"
                                   data-key="Device_Third_Name">
                                    @ViewBag.Entries["Device_Third_Name"]
                                </a>
                            </td>
                            <td data-key="Device_Third_Price">@ViewBag.Entries["Device_Third_Price"]</td>
                        </tr>


                        <tr>
                            <td><img class="zoom-img" src="~/img/medio.jpg" alt="DIACOM MEDIO"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="Medio"
                                   data-key="Device_Four_Name">
                                    @ViewBag.Entries["Device_Four_Name"]
                                </a>
                            </td>
                            <td data-key="Device_Four_Price">@ViewBag.Entries["Device_Four_Price"]</td>
                        </tr>
                        <tr>
                            <td><img class="zoom-img" src="~/img/freqpc.jpg" alt="DIACOM-SOLO-FREQ-PC"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="FreqPc"
                                   data-key="Device_Fifth_Name">
                                    @ViewBag.Entries["Device_Fifth_Name"]
                                </a>
                            </td>
                            <td data-key="Device_Fifth_Price">@ViewBag.Entries["Device_Fifth_Price"]</td>
                        </tr>
                        <tr>
                            <td><img class="zoom-img" src="~/img/Ioniser.jpg" alt="DIACOM-SOLO-Ionizer"></td>
                            <td>
                                <a asp-area="" asp-controller="Diacom" asp-action="Ioniser"
                                   data-key="Device_Six_Name">
                                    @ViewBag.Entries["Device_Six_Name"]
                                </a>
                            </td>
                            <td data-key="Device_Six_Price">@ViewBag.Entries["Device_Six_Price"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div id="imageModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="fullImage">
</div>

<style>
    .zoom-img {
        width: 100px;
        height: 100px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .zoom-img:hover {
            transform: scale(1.1);
        }

    .modal {
        display: none; 
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8); 
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        max-width: 600px;
        max-height: 600px;
        border-radius: 20px;
    }

    .close {
        position: absolute;
        top: 15px;
        right: 25px;
        color: white;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover {
            color: red;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modal = document.getElementById("imageModal");
        const modalImg = document.getElementById("fullImage");
        const closeBtn = document.querySelector(".close");
        const images = document.querySelectorAll(".zoom-img");

        images.forEach(img => {
            img.addEventListener("click", function () {
                modal.style.display = "flex";
                modalImg.src = this.src; 
            });
        });

        closeBtn.addEventListener("click", function () {
            modal.style.display = "none"; 
        });

        modal.addEventListener("click", function (e) {
            if (e.target === modal) {
                modal.style.display = "none";
            }
        });
    });
</script>

