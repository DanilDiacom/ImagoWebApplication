@{
    ViewData["Title"] = "Marketing a cíle společnosti";
}

<link rel="stylesheet" href="~/css/marketing.css" asp-append-version="true" />

<section id="content">
    <div class="inner-content">
        <div class="container">
            <!-- Заголовок страницы -->
            @if (ViewBag.Entries.ContainsKey("Marketing_Title"))
            {
                var titleStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Title") ? ViewBag.TextStyles["Marketing_Title"] : null;
                <h1 class="page-title" data-key="Marketing_Title" style="
                    font-family: @(titleStyle?.FontFamily ?? "Arial");
                    font-size: @(titleStyle?.FontSize ?? "2.5rem")px;
                    font-weight: @(titleStyle?.FontWeight ?? "600");
                    font-style: @(titleStyle?.FontStyle ?? "normal");
                    text-decoration: @(titleStyle?.TextDecoration ?? "none");
                    color: @(titleStyle?.TextColor ?? "#34495e");">
                    @ViewBag.Entries["Marketing_Title"]
                </h1>
            }

            @if (ViewBag.Entries.ContainsKey("Marketing_Header"))
            {
                var headerStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Header") ? ViewBag.TextStyles["Marketing_Header"] : null;
                <p class="intro-text" data-key="Marketing_Header" style="
                    font-family: @(headerStyle?.FontFamily ?? "Arial");
                    font-size: @(headerStyle?.FontSize ?? "1.1rem")px;
                    font-weight: @(headerStyle?.FontWeight ?? "normal");
                    font-style: @(headerStyle?.FontStyle ?? "normal");
                    text-decoration: @(headerStyle?.TextDecoration ?? "none");
                    line-height: 1.6;
                    color: @(headerStyle?.TextColor ?? "#7f8c8d");">
                    @ViewBag.Entries["Marketing_Header"]
                </p>
            }

            @if (ViewBag.Entries.ContainsKey("Marketing_SubHead"))
            {
                var subHeadStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_SubHead") ? ViewBag.TextStyles["Marketing_SubHead"] : null;
                <p class="sub-heading" data-key="Marketing_SubHead" style="
                    font-family: @(subHeadStyle?.FontFamily ?? "Arial");
                    font-size: @(subHeadStyle?.FontSize ?? "1.2rem")px;
                    font-weight: @(subHeadStyle?.FontWeight ?? "500");
                    font-style: @(subHeadStyle?.FontStyle ?? "normal");
                    text-decoration: @(subHeadStyle?.TextDecoration ?? "none");
                    color: @(subHeadStyle?.TextColor ?? "#34495e");">
                    @ViewBag.Entries["Marketing_SubHead"]
                </p>
            }

            <ul class="priority-list">
                <li>
                    @if (ViewBag.Entries.ContainsKey("Marketing_Prioriti_First"))
                    {
                        var priorityFirstStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Prioriti_First") ? ViewBag.TextStyles["Marketing_Prioriti_First"] : null;
                        <p data-key="Marketing_Prioriti_First" style="
                            font-family: @(priorityFirstStyle?.FontFamily ?? "Arial");
                            font-size: @(priorityFirstStyle?.FontSize ?? "inherit")px;
                            font-weight: @(priorityFirstStyle?.FontWeight ?? "600");
                            font-style: @(priorityFirstStyle?.FontStyle ?? "normal");
                            text-decoration: @(priorityFirstStyle?.TextDecoration ?? "none");
                            color: @(priorityFirstStyle?.TextColor ?? "#2c3e50");">
                            <strong>@ViewBag.Entries["Marketing_Prioriti_First"]</strong>
                        </p>
                    }

                    @if (ViewBag.Entries.ContainsKey("Marketing_SubPrioriti_First"))
                    {
                        var subPriorityFirstStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_SubPrioriti_First") ? ViewBag.TextStyles["Marketing_SubPrioriti_First"] : null;
                        <p data-key="Marketing_SubPrioriti_First"
                           class="marketing-subpriority"
                           style="font-family: @(subPriorityFirstStyle?.FontFamily ?? "Arial");
             font-size: @(subPriorityFirstStyle?.FontSize ?? "16")px;
             font-weight: @(subPriorityFirstStyle?.FontWeight ?? "normal");
             font-style: @(subPriorityFirstStyle?.FontStyle ?? "normal");
             text-decoration: @(subPriorityFirstStyle?.TextDecoration ?? "none");
             color: @(subPriorityFirstStyle?.TextColor ?? "#000000");">
                            @ViewBag.Entries["Marketing_SubPrioriti_First"]
                        </p>
                    }

                    @if (ViewBag.Entries.ContainsKey("Marketing_SubPrioriti_Second"))
                    {
                        var subPrioritySecondStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_SubPrioriti_Second") ? ViewBag.TextStyles["Marketing_SubPrioriti_Second"] : null;
                        <p data-key="Marketing_SubPrioriti_Second"
                           class="marketing-subpriority"
                           style="font-family: @(subPrioritySecondStyle?.FontFamily ?? "Arial");
             font-size: @(subPrioritySecondStyle?.FontSize ?? "16")px;
             font-weight: @(subPrioritySecondStyle?.FontWeight ?? "normal");
             font-style: @(subPrioritySecondStyle?.FontStyle ?? "normal");
             text-decoration: @(subPrioritySecondStyle?.TextDecoration ?? "none");
             color: @(subPrioritySecondStyle?.TextColor ?? "#000000");">
                            @ViewBag.Entries["Marketing_SubPrioriti_Second"]
                        </p>
                    }
                </li>

                <li>
                    @if (ViewBag.Entries.ContainsKey("Marketing_Prioriti_Second"))
                    {
                        var prioritySecondStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Prioriti_Second") ? ViewBag.TextStyles["Marketing_Prioriti_Second"] : null;
                        <p data-key="Marketing_Prioriti_Second" style="
                            font-family: @(prioritySecondStyle?.FontFamily ?? "Arial");
                            font-size: @(prioritySecondStyle?.FontSize ?? "inherit")px;
                            font-weight: @(prioritySecondStyle?.FontWeight ?? "600");
                            font-style: @(prioritySecondStyle?.FontStyle ?? "normal");
                            text-decoration: @(prioritySecondStyle?.TextDecoration ?? "none");
                            color: @(prioritySecondStyle?.TextColor ?? "#2c3e50");">
                            <strong>@ViewBag.Entries["Marketing_Prioriti_Second"]</strong>
                        </p>
                    }

                    @if (ViewBag.Entries.ContainsKey("Marketing_SubPrioriti_Second_First"))
                    {
                        var subPrioritySecondFirstStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_SubPrioriti_Second_First") ? ViewBag.TextStyles["Marketing_SubPrioriti_Second_First"] : null;
                        <p data-key="Marketing_SubPrioriti_Second_First"
                           style="font-family: @(subPrioritySecondFirstStyle?.FontFamily ?? "Arial");
             font-size: @(subPrioritySecondFirstStyle?.FontSize ?? "16")px;
             font-weight: @(subPrioritySecondFirstStyle?.FontWeight ?? "normal");
             font-style: @(subPrioritySecondFirstStyle?.FontStyle ?? "normal");
             text-decoration: @(subPrioritySecondFirstStyle?.TextDecoration ?? "none");
             color: @(subPrioritySecondFirstStyle?.TextColor ?? "#000000");">
                            @ViewBag.Entries["Marketing_SubPrioriti_Second_First"]
                        </p>
                    }

                </li>

                <li>
                    @if (ViewBag.Entries.ContainsKey("Marketing_Prioriti_Third"))
                    {
                        var priorityThirdStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Prioriti_Third") ? ViewBag.TextStyles["Marketing_Prioriti_Third"] : null;
                        <p data-key="Marketing_Prioriti_Third" style="
                            font-family: @(priorityThirdStyle?.FontFamily ?? "Arial");
                            font-size: @(priorityThirdStyle?.FontSize ?? "inherit")px;
                            font-weight: @(priorityThirdStyle?.FontWeight ?? "600");
                            font-style: @(priorityThirdStyle?.FontStyle ?? "normal");
                            text-decoration: @(priorityThirdStyle?.TextDecoration ?? "none");
                            color: @(priorityThirdStyle?.TextColor ?? "#2c3e50");">
                            <strong>@ViewBag.Entries["Marketing_Prioriti_Third"]</strong>
                        </p>
                    }

                    @if (ViewBag.Entries.ContainsKey("Marketing_SubPrioriti_Third_First"))
                    {
                        var subPriorityThirdFirstStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_SubPrioriti_Third_First") ? ViewBag.TextStyles["Marketing_SubPrioriti_Third_First"] : null;
                        <p data-key="Marketing_SubPrioriti_Third_First"
                           class="marketing-subpriority"
                           style="font-family: @(subPriorityThirdFirstStyle?.FontFamily ?? "Arial");
             font-size: @(subPriorityThirdFirstStyle?.FontSize ?? "16")px;
             font-weight: @(subPriorityThirdFirstStyle?.FontWeight ?? "normal");
             font-style: @(subPriorityThirdFirstStyle?.FontStyle ?? "normal");
             text-decoration: @(subPriorityThirdFirstStyle?.TextDecoration ?? "none");
             color: @(subPriorityThirdFirstStyle?.TextColor ?? "#000000");">
                            @ViewBag.Entries["Marketing_SubPrioriti_Third_First"]
                        </p>
                    }
                </li>

                <li>
                    @if (ViewBag.Entries.ContainsKey("Marketing_Prioriti_Four"))
                    {
                        var priorityFourStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Prioriti_Four") ? ViewBag.TextStyles["Marketing_Prioriti_Four"] : null;
                        <p data-key="Marketing_Prioriti_Four" style="
                            font-family: @(priorityFourStyle?.FontFamily ?? "Arial");
                            font-size: @(priorityFourStyle?.FontSize ?? "inherit")px;
                            font-weight: @(priorityFourStyle?.FontWeight ?? "600");
                            font-style: @(priorityFourStyle?.FontStyle ?? "normal");
                            text-decoration: @(priorityFourStyle?.TextDecoration ?? "none");
                            color: @(priorityFourStyle?.TextColor ?? "#2c3e50");">
                            <strong>@ViewBag.Entries["Marketing_Prioriti_Four"]</strong>
                        </p>
                    }

                    @if (ViewBag.Entries.ContainsKey("Marketing_Prioriti_Four_First"))
                    {
                        var priorityFourFirstStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("Marketing_Prioriti_Four_First") ? ViewBag.TextStyles["Marketing_Prioriti_Four_First"] : null;
                        <p data-key="Marketing_Prioriti_Four_First"
                           class="marketing-priority"
                           style="font-family: @(priorityFourFirstStyle?.FontFamily ?? "Arial");
             font-size: @(priorityFourFirstStyle?.FontSize ?? "16")px;
             font-weight: @(priorityFourFirstStyle?.FontWeight ?? "normal");
             font-style: @(priorityFourFirstStyle?.FontStyle ?? "normal");
             text-decoration: @(priorityFourFirstStyle?.TextDecoration ?? "none");
             color: @(priorityFourFirstStyle?.TextColor ?? "#000000");">
                            @ViewBag.Entries["Marketing_Prioriti_Four_First"]
                        </p>
                    }
                </li>
            </ul>
        </div>
    </div>
</section>