    .experience-block {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .experience-title {
        color: #007bff;
        font-size: 22px;
        margin-bottom: 10px;
    }

    .inner-content {
        max-width: 1150px;
