            var desc2Style = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Desc2") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Desc2"] : null;
            <p class="text" style="
                font-family: @(desc2Style?.FontFamily ?? "Arial");
                font-size: @(desc2Style?.FontSize ?? "1rem");
                font-weight: @(desc2Style?.FontWeight ?? "400");
                font-style: @(desc2Style?.FontStyle ?? "normal");
                text-decoration: @(desc2Style?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Desc2">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Desc2"]
            </p>
        }

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Desc3"))
        {
            var desc3Style = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Desc3") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Desc3"] : null;
            <p class="text" style="
                font-family: @(desc3Style?.FontFamily ?? "Arial");
                font-size: @(desc3Style?.FontSize ?? "1rem");
                font-weight: @(desc3Style?.FontWeight ?? "400");
                font-style: @(desc3Style?.FontStyle ?? "normal");
                text-decoration: @(desc3Style?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Desc3">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Desc3"]
            </p>
        }

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Signature"))
        {
            var signatureStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Signature") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Signature"] : null;
            <p class="signature" style="
                font-family: @(signatureStyle?.FontFamily ?? "Arial");
                font-size: @(signatureStyle?.FontSize ?? "1.25rem");
                font-weight: @(signatureStyle?.FontWeight ?? "600");
                font-style: @(signatureStyle?.FontStyle ?? "italic");
                text-decoration: @(signatureStyle?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Signature">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Signature"]
            </p>
        }

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Author"))
        {
            var authorStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Author") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Author"] : null;
            <p class="author" style="
                font-family: @(authorStyle?.FontFamily ?? "Arial");
                font-size: @(authorStyle?.FontSize ?? "1.25rem");
                font-weight: @(authorStyle?.FontWeight ?? "600");
                font-style: @(authorStyle?.FontStyle ?? "normal");
                text-decoration: @(authorStyle?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Author">
