        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Quote"))
        {
            var quoteStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Quote") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Quote"] : null;
            <p class="quote" style="text-align: center;
                font-family: @(quoteStyle?.FontFamily ?? "Arial");
                font-size: @(quoteStyle?.FontSize ?? "1.25rem");
                font-weight: @(quoteStyle?.FontWeight ?? "600");
                font-style: @(quoteStyle?.FontStyle ?? "italic");
                text-decoration: @(quoteStyle?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Quote">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Quote"]
            </p>
        }

        <div class="komentar-block">
            @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_CommentTitle"))
            {
                var commentTitleStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_CommentTitle") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_CommentTitle"] : null;
                <h3 class="section-title" style="text-align: center;
                    font-family: @(commentTitleStyle?.FontFamily ?? "Arial");
                    font-size: @(commentTitleStyle?.FontSize ?? "1.75rem");
                    font-weight: @(commentTitleStyle?.FontWeight ?? "600");
                    font-style: @(commentTitleStyle?.FontStyle ?? "normal");
                    text-decoration: @(commentTitleStyle?.TextDecoration ?? "none");"
                    data-key="DiacomClub_PracovniAktiv_CommentTitle">
                    @ViewBag.Entries["DiacomClub_PracovniAktiv_CommentTitle"]
                </h3>
            }

            @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_CommentDesc"))
            {
                var commentDescStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_CommentDesc") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_CommentDesc"] : null;
                <p class="text" style="
                    font-family: @(commentDescStyle?.FontFamily ?? "Arial");
                    font-size: @(commentDescStyle?.FontSize ?? "1rem");
                    font-weight: @(commentDescStyle?.FontWeight ?? "400");
                    font-style: @(commentDescStyle?.FontStyle ?? "normal");
                    text-decoration: @(commentDescStyle?.TextDecoration ?? "none");">
                    <span data-key="DiacomClub_PracovniAktiv_CommentDesc">
                        @ViewBag.Entries["DiacomClub_PracovniAktiv_CommentDesc"]
                    </span>
                    <a href="http://www.semes.sk/urmium-2017/" class="styled-link" target="_blank">
                        http://www.semes.sk/urmium-2017/
                    </a>
                </p>
            }
        </div>

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Desc2"))
