@{
    ViewData["Title"] = "Pracovní aktiv";
}

<link rel="stylesheet" href="~/css/aktiv.css" asp-append-version="true" />

<section>
    <div class="container-gen">
        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Title"))
        {
            var titleStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Title") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Title"] : null;
            <h1 class="page-title" style="text-align: center;
                font-family: @(titleStyle?.FontFamily ?? "Arial");
                font-size: @(titleStyle?.FontSize ?? "2.5rem");
                font-weight: @(titleStyle?.FontWeight ?? "600");
                font-style: @(titleStyle?.FontStyle ?? "normal");
                text-decoration: @(titleStyle?.TextDecoration ?? "none");"
                data-key="DiacomClub_PracovniAktiv_Title">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Title"]
            </h1>
        }

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Subtitle"))
        {
            var subtitleStyle = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Subtitle") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Subtitle"] : null;
            <h2 class="section-title" style="text-align: center;
                font-family: @(subtitleStyle?.FontFamily ?? "Arial");
                font-size: @(subtitleStyle?.FontSize ?? "2rem");
                font-weight: @(subtitleStyle?.FontWeight ?? "600");
                font-style: @(subtitleStyle?.FontStyle ?? "normal");
                text-decoration: @(subtitleStyle?.TextDecoration ?? "none");"
                data-key="DiacomClub_PracovniAktiv_Subtitle">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Subtitle"]
            </h2>
        }

        @if (ViewBag.Entries.ContainsKey("DiacomClub_PracovniAktiv_Desc1"))
        {
            var desc1Style = ViewBag.TextStyles != null && ViewBag.TextStyles.ContainsKey("DiacomClub_PracovniAktiv_Desc1") ? ViewBag.TextStyles["DiacomClub_PracovniAktiv_Desc1"] : null;
            <p class="text" style="text-align: center;
                font-family: @(desc1Style?.FontFamily ?? "Arial");
                font-size: @(desc1Style?.FontSize ?? "1rem");
                font-weight: @(desc1Style?.FontWeight ?? "400");
                font-style: @(desc1Style?.FontStyle ?? "normal");
                text-decoration: @(desc1Style?.TextDecoration ?? "none");"
               data-key="DiacomClub_PracovniAktiv_Desc1">
                @ViewBag.Entries["DiacomClub_PracovniAktiv_Desc1"]
            </p>
